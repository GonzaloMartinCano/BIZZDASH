
{{> navbarloggin}}

  <main class="container">
    
    <h1>Welcome to {{title}} !</h1><br>
    <span>Find the best professionals with us </span> 
    <form class="form-group row " action="/" method="POST">
      <div class="form-group col-2">
          <select name="option" class="form-control">
            <option value="name">Name</option>
            <option value="category">Category</option>
          </select>
        </div>
        <div class="form-group col-6">
          <input type="text" placeholder="Search..." class="form-control" id="search" name="username">
          
        </div>
        <div class="form-group col-3">
          <button type="submit" class="btn btn-base">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
          </button>
          </div>
      </form>
  </div>  
    {{#if users}}
      {{#each users}}
        <h1>{{username}}</h1>
      {{/each}}
    {{/if }}
    {{#if message}}

        <p style="color:red; font-weight: 900">{{message}}</p>

    {{/if }}


  </main>



