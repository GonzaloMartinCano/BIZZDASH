                </ul>
            </div>
        </div>
    </div>



<!-- Modal EDIT PROFILE-->
<div class="modal fade" id="editprofile" data-backdrop="static" data-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Edit profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            <form action="/edituser" method="POST"  enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name-input">Name</label>
                    <input name="name" type="text" placeholder="{{usertorender.username}}" value="{{usertorender.name}}" class="form-control" id="name-input">
                </div>
                <div class="form-group">
                    <label for="headline-input">Headline</label>
                    <input name="headline" type="text" placeholder="{{usertorender.headline}}" value="{{usertorender.headline}}" class="form-control" id="headline-input">
                </div>
                <div class="form-group">
                    <label for="description-input">Description</label>
                    <textarea name="description" class="form-control" rows="4">{{usertorender.description}}</textarea>
                </div>

                <label>Experience</label>  <p style="font-size: xx-small;">*Your actually experiences are: '{{usertorender.experience}}' </p>

                <div class="form-group">
                    <div class="row">
                        <div class="col-4">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" name="frontend" value="FrontEnd" class="custom-control-input" id="frontend">
                                <label class="custom-control-label" for="frontend">Frontend </label>
                            </div>
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" name="backend" value="BackEnd" class="custom-control-input" id="backend">
                                <label class="custom-control-label" for="backend">Backend</label>
                            </div>
                        </div>
                        
                        <div class="col-4">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" name="fullstack" value="Fullstack" class="custom-control-input"  id="fullstack">
                                <label class="custom-control-label" for="fullstack">FullStack</label>
                            </div>
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" name="node" value="Node" class="custom-control-input" id="node">
                                <label class="custom-control-label" for="node">Node</label>
                            </div>
                        </div>

                        <div class="col-4">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" name="javascript" value="Javascript" class="custom-control-input"  id="javascript">
                                <label class="custom-control-label" for="javascript">Javascript</label>
                            </div>
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" name="react" value="React" class="custom-control-input" id="react">
                                <label class="custom-control-label" for="react">React</label>
                            </div>
                        </div>
                        
                    </div>

                </div>

                <div class="form-group">
                    <label for="gitHub-input">GitHub</label>
                    <input name="gitHub" type="text" placeholder="{{usertorender.links.gitHub}}" value="{{usertorender.links.gitHub}}" class="form-control" id="gitHub-input">
                </div>
                <div class="form-group">
                    <label for="linkedin-input">Linkedin</label>
                    <input name="linkedin" type="text" placeholder="{{usertorender.links.linkedin}}" value="{{usertorender.links.linkedin}}" class="form-control" id="linkedin-input">
                </div>
                <input type="text" name="nameInput" placeholder="{{usertorender.profileImg}}" value="{{usertorender.profileImg}}"><br><br>
                <input type="file" name="imageInput" value="{{usertorender.profileImg}}"><br><br>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-outline-dark">Confirm changes</button>
            </div>
            </form>
        </div>
    </div>
</div>



<!-- Modal ADD PROJECT-->

<div class="modal fade bd-example-modal-lg" id="createproject" tabindex="-1" role="dialog" aria-labelledby="createproject" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">PROJECT EDIT</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

 {{!-- MODAL BODY --}}
        
      <div class="modal-body">


            <form action="/createproject" method="POST"  enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name-input">Project Name</label>
                    <input name="name" type="text" class="form-control" id="name-input" required>
                </div>
                <div class="form-group">
                    <label for="description-input">Description</label>
                    <textarea name="description" maxlength="50" class="form-control" required></textarea>
                </div>
                <div class="form-group">
                    <label for="link-github">GitHub</label>
                    <input name="github" type="text" class="form-control" id="link-github" required>
                </div>
                <input type="text" name="fileUrl" placeholder="" value=""><br><br>
                <input type="file" name="videoInput" required><br><br>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-outline-dark">Confirm changes</button>
            </div>
            </form>


      
    </div>
  </div>
</div>



</main>