  
<main class="container-fluid profile">
   
    <div class="row">

        <div class="col-md-3 mb-3">
            <div class="card profileinfo">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <img src="{{usertorender.profileImg}}" alt="{{usertorender.username}}" class="rounded-circle">
                        <div class="mt-3">
                            <h4>{{usertorender.name}}</h4>                                              
                            <p class="text-secondary mb-1">{{usertorender.headline}}</p>    

                            {{#if userRegistered}}

                            <button type="button" class="btn btn-outline-dark" data-toggle="modal" data-target="#editprofile">
                                Edit Profile
                            </button>

                            {{/if }}
                            
                        </div>
                    </div>
                </div>
            </div>

            
        </div>

        <div class="col-md-4">
            <div class="card ">
                <div class="card-body descriptioncard">
                    
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">{{usertorender.username}}</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            {{usertorender.name}}
                        </div>
                    </div>
                    
                    <hr>
                    <div class="row descriptioncardscroll">
                        <span >{{usertorender.description}}</span>
                    </div>
                </div>
            </div>
        </div>
   
{{!-- PROJECT LIST --}}
    <div class="col-md-5 listprojectscard" >
            <div class="card mb-3">
                <div class="card-body">
                    
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">PROJECT LIST</h6>
                        </div>

                {{#if userRegistered}}
                <div class="col-sm-9 text-secondary">
                <button type="button" class="btn btn-outline-dark btn-sm" data-toggle="modal" data-target="#createproject">
                    + Add new Project 
                </button>
                </div>
                {{/if}}
                     </div>

                    <hr>
   {{!-- LIST PROJECTS --}}     
        <div class="row listprojectscardscroll">
                        
                {{#if userRegistered}}
        
                    {{#each usertorender.projects }}
                        <div class="col-4">
                        {{!-- LINK TO OPEN MODAL & SEE DETAILS --}}
                       

                        <a type="button" class="" data-toggle="modal" data-target="#edit{{id}}">
                            <svg width="0.7em" height="0.7em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                            </svg>
                        </a>

                        <a type="button" class="" data-toggle="modal" data-target="#deleteproject{{id}}">
                            <svg width="0.7em" height="0.7em" viewBox="0 0 16 16" class="bi bi-trash-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0v-7z"/>
                            </svg>
                        </a>

                        <a type="button" class="btn btn-light" data-toggle="modal" data-target="#details{{id}}">
                            {{name}}
                        </a>
                        </div>
                        
                    {{/each}}

                {{else}}

                    {{#each usertorender.projects }}
                    <div class="col-3">
                            {{!-- LINK TO OPEN MODAL & SEE DETAILS --}}
                    <a type="button" class="btn btn-light" data-toggle="modal" data-target="#details{{id}}">
                        {{name}}
                    </a>

                    </div>
                    {{/each}}

                {{/if}}    
                    </div>
                </div>
            </div>
        </div>
    </div>
     
    

<!-- PROJECTS CARDS -->

    <div class="row lineprojects justify-content-center">
            
      
    
        {{#if userRegistered}}
            {{#each usertorender.projects }}
            <div class="card col-md-3 projectcard">
  
                {{> projects}}

                <button type="button" class="btn btn-sm btn-light" data-toggle="modal" data-target="#edit{{id}}">
                    Edit Project
                </button>
   
            </div>
            
            {{/each}}
        {{else}}
            {{#each usertorender.projects }}
            <div class="card col-md-3 projectcard">
                {{> projects}}
            </div>
            {{/each}}
        {{/if}}





    </div>

<!-- CARD LINKS PROFILE-->
    <div class="row cardlink">
        <div class="col-md-4">
            <div class="card mt-3">
                <ul class="list-group list-group-flush">

                <a href="{{usertorender.links.linkedin}}" target="_blank">
                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
