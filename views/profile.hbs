<!-- Button trigger modal -->

<!-- Modal EDIT PROFILE-->
<div class="modal fade" id="editprofile" data-backdrop="static" data-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Edit profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            <form action="/upload" method="POST"  enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name-input">Name</label>
                    <input name="name" type="text" placeholder="{{user.username}}" value="{{user.username}}" class="form-control" id="name-input">
                </div>
                <div class="form-group">
                    <label for="description-input">Description</label>
                    <input name="description" type="text" placeholder="{{user.description}}" value="{{user.description}}" class="form-control" id="description-input">
                </div>
                <div class="form-group">
                    <label for="description-input">Git Hub</label>
                    <input name="description" type="text" placeholder="{{user.link.github}}" value="{{user.link.github}}" class="form-control" id="description-input">
                </div>
                <div class="form-group">
                    <label for="description-input">Linkedin</label>
                    <input name="description" type="text" placeholder="{{user.link.linkedin}}" value="{{user.link.linkedin}}" class="form-control" id="description-input">
                </div>
                <input type="text" name="nameInput" placeholder="nombre de la imagen"><br><br>
                <input type="file" name="imageInput"><br><br>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-outline-dark">Confirm changes</button>
            </div>
            </form>
        </div>
    </div>
</div>
